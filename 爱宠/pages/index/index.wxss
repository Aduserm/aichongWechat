/**index.wxss**/

page {
  background: #f7f8f9;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.topView {
  width: 100%;
  background: -webkit-linear-gradient(#faa755, #ea9518);
  /* height: 260rpx; */
  height: 200rpx;
  position: relative;
}

.searchView {
  width: 70%;
  position: absolute;
  margin-left: 15%;
  background-color: #fbfbfb;
  height: 70rpx;
  z-index: 1;
  border-radius: 60rpx;
  top: 15%;
}

.search {
  height: 70rpx;
}

.search-icon {
  width: 15%;
  float: left;
  border-radius: 0rpx 60rpx 60rpx 0rpx;
  text-align: center;
  height: 70rpx;
  line-height: 70rpx;
  vertical-align: middle;
}

.searchimg {
  display: inline-block;
  height: 23px;
  width: 23px;
  vertical-align: middle;
}

.search-text {
  width: 70%;
  text-align: center;
  float: left;
  height: 70rpx;
  line-height: 70rpx;
}

.searchText {
  color: #666;
}

.midView {
  width: 100%;
  background-color: #fff;
  padding-bottom: 15rpx;
}

.function {
  padding-top: 20rpx;
  height: 200rpx;
}

.fun-img {
  float: left;
  height: 200rpx;
  width: 25%;
  text-align: center;
}

.function image {
  width: 120rpx;
  height: 120rpx;
}

.fun-text {
  width: 100%;
}

.mainbox {
  width: 100%;
  position: relative;
  float: left;
}

.container .feed-item {
  width: 100%;
  padding: 15rpx 20rpx 10rpx;
  margin: 5px 0 0 0;
  background: #fff;
  float: left;
}

.container .feed-item .feed-source {
  width: 100%;
  float: left;
  height: 50rpx;
}

.container .feed-item .feed-source .avatar {
  display: inline-block;
}

.container .feed-item .feed-source a {
  display: inline-block;
  height: 50rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.container .feed-item .feed-source .avatar image {
  /*position: absolute;*/
  display: inline-block;
  width: 45rpx;
  height: 45rpx;
  border-radius: 45rpx;
  top: 10rpx;
  vertical-align: middle;
}

.container .feed-source .avatar image {
  /*position: absolute;*/
  display: inline-block;
  width: 45rpx;
  height: 45rpx;
  border-radius: 45rpx;
  top: 10rpx;
  vertical-align: middle;
}

.dwr {
  position: relative;
}

.nickname {
  margin: 0 5px;
  max-width: 100px;
  overflow: hidden;
  color: #333;
}

.datebox {
  float: right;
  /*position: absolute;*/
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  vertical-align: middle;
  color: #a0acac;
  font-size: 28rpx;
}

.helpname {
  display: block;
  float: right;
  margin-top: 2px;
  margin-left: 0px !important;
  color: #666;
  position: absolute;
  right: 5px;
  top: 25px;
}

.answer-txt {
  display: -webkit-box;
  line-height: 45rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
}

.picV {
  margin-top: 10px;
  float: left;
  width: 100%;
  text-align: center;
  position: relative;
}

.imgbox {
  width: 33.33%;
  float: left;
  position: relative;
  padding-bottom: 33.33%;
  height: 0;
  left: -16.665%;
}

.picI {
  display: inline-block;
  float: left;
  height: 95%;
  width: 95%;
  position: absolute;
}

.number {
  padding: 0 8px;
  color: white;
  background-color: rgb(255, 103, 103);
  position: absolute;
  bottom: 5%;
  right: 1.8%;
}

.row1-right {
  float: right;
  display: inline-block;
  text-align: right;
  vertical-align: middle;
}

.row1 {
  width: 100%;
  overflow: hidden;
  padding-top: 10px;
}

.row1-left {
  display: inline-block;
  vertical-align: middle;
  float: left;
  margin-right: 5px;
}

.row1-left text {
  color: #666;
  vertical-align: middle;
  margin: 0 5px;
}

.stext {
  color: #a0acac;
  vertical-align: middle;
}

.helpimage {
  float: left;
  width: 15px;
  height: 15px;
  margin: 4px 2px;
}
.imgbox2{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  border-radius: 50%;
}